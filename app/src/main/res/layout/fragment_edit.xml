<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".EditFragment" >

    <!-- Type Field -->
    <TextView
        android:id="@+id/type_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Type:"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/editmypet_type_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp" />

    <!-- Breed Field -->
    <TextView
        android:id="@+id/breed_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Breed:"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/editmypet_breed_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp" />

    <!-- Color Field -->
    <TextView
        android:id="@+id/color_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Color:"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/editmypet_color_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp" />

    <!-- Name Field -->
    <TextView
        android:id="@+id/name_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name:"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/editmypet_name_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp" />
    <!-- Picture Field -->
    <TextView
        android:id="@+id/picture_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Picture:"
        android:textColor="@color/black"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!--            android:background="@drawable/placeholder_image" />-->

        <ImageView
            android:id="@+id/editmypet_picture"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:padding="55dp"
            android:src="@drawable/baseline_add_a_photo_24" />

        <Button
            android:id="@+id/editmypet_select_picture_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Select" />
    </LinearLayout>
    <!-- Description Field -->
    <TextView
        android:id="@+id/description_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Description:"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/editmypet_desc_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/addR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="30dp"
            android:text="Add Review"
            android:clickable="true"
            android:textColor="@color/purple_700"/>
        <TextView
            android:id="@+id/allR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="All Reviews"
            android:clickable="true"
            android:textColor="@color/purple_700"/>



    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="bottom">

        <Button
            android:id="@+id/editmypet_finished_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Done" />

        <Button
            android:id="@+id/editmypet_cancel_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Back" />
    </LinearLayout>
</LinearLayout>



